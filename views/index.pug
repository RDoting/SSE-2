html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css")
    title= title
  body
    nav(class='navbar navbar-expand-lg navbar-light bg-light')
      div(class='container-fluid')
        a(class='navbar-brand' href='/home') 
          img(src='/images/icon.png', width=30, height=30, class='d-inline-block align-text-top mr-2') 
          span EnergyConversion
        button(class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span(class='navbar-toggler-icon')
        div(class='collapse navbar-collapse' id='navbarSupportedContent')
          ul(class='navbar-nav me-auto mb-2 mb-lg-0')
            li(class='nav-item')
              a(class='nav-link active' aria-current='page' href='#') Convert
            li(class='nav-item')
              a(class='nav-link active' aria-current='page' href='#') Info
            li(class='nav-item')
              a(class='nav-link active' aria-current='page' href='#') About Us
    
    main
      div.container
        form(action='/submit-form', method='POST')
          div.row(style='display: flex; justify-content: space-between;')
            div.col#leftSide
              input(type='text', name='amount', id='amount', placeholder="Enter the amount")
            div.col#leftMiddleSide
              select(name='energyType', id='energyType' style='width: 150px;')
                option(value='option1') kWh
                option(value='option2') J
            div.col
              p Convert to:
            div.col#rightMiddleSide
              select(name='energyTypeReq', id='energyTypeReq' style='width: 150px;')
                option(value='option1') kWh
                option(value='option2') J
            div.col#rightSide
              button(type='submit') Convert
          
            


      // CSS
      style.
        .container {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          height: 40vh;
        }

        form {
          width: 120%;
        }

      