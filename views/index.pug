    .container-fluid.left-align
      .row
        .col-md-6
          .row
            .col-md-4
              h3 Power P
              input.form-control(type="number", id='input1', placeholder="Enter a number")
            .col-md-4
              h3 Time t
              input.form-control(type="number", id='input2', placeholder="Enter a number")
            .col-md-4
              h3 Co2 
              input.form-control(type="number", id='input3', placeholder="Enter a number")
        .col-md-6
          .row
            .col-md-4
              h3 Power P Right
              input.form-control(type="number", id='input4', placeholder="Enter a number")
            .col-md-4
              h3 Time t
              input.form-control(type="number", id='input5', placeholder="Enter a number")
            .col-md-4
              h3 Co2 
              input.form-control(type="number", id='input6', placeholder="Enter a number")


    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js")
    script.
      $(document).ready(function() {
        $('#input1, #input2').on('input', function() {
          var input1 = parseInt($('#input1').val()) || 0;
          var input2 = parseInt($('#input2').val()) || 0;
          var result = input1 * input2;
          $('#input3').val(result);
        });
      });

    script.
      $(document).ready(function() {
        $('#input4, #input5').on('input', function() {
          var input4 = parseInt($('#input4').val()) || 0;
          var input5 = parseInt($('#input5').val()) || 0;
          var result = input4 * input5;
          $('#input6').val(result);
        });
      });